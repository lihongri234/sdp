/* pages/kaidan/index.wxss */
.container{
  overflow: hidden;
 
}
.head{
     position: relative;
}
.head-titile{
  border-bottom: 8rpx solid #ff683e;
}
.head-operat{
  font-family: '微软黑体';
  font-size: 60rpx;
}
.operatModel{
 width:280rpx;
 height: auto;
 overflow: hidden;
 background-color: #49494B;
 color: #FFFFFF;
 position: absolute;
 top:100rpx;
 right:10rpx;
 border-radius: 10rpx;
 padding: 10rpx 20rpx;
}
.operatModel .operatitem{
  border-bottom: 1rpx solid #898989;
  padding: 20rpx;
  font-size: 28rpx;
}

.operatModel .operatitem image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

/*底部*/
.footer{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: #000;
    border-top: 1rpx solid #FF683E;
}
.footer .btn-pay{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  color: #FF683E;
}
.footer .btn-account{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #F5B918;
  color: #fff;
}
.footer .btn-cash{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FF683E;
  color: #fff;
}

/*商品列表*/
.searchFor{
  padding: 20rpx;
  background-color: #EFEFF4;
}
.searchFor .img-1 {
    width: 28rpx;
    height: 28rpx;
}
.goodslist{
  background-color: #fff;
  height: 910rpx;
  overflow-y:scroll; 
}
.goodsitem{
  padding: 10rpx 0;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #ffe1d9;
}
.goodsitem .name{
  font-size: 28rpx;
}
.goodsitem .desc{
  font-size: 22rpx;
  color: #898989;
}
.goodsitem .money{
  font-size: 22rpx;
  color: #898989;
}
.goodslist .atvice1{
  background-color: #ffe1d9;
}
.goodslist .atvice2 .name,.goodslist .atvice2 .desc,.goodslist .atvice2 .money{
  color: #FF683E;
}

/*总金额*/
.sumMoney{
  width:250rpx;
  margin: 50rpx auto;
  font-size: 26rpx;
  color:  #898989; 
  line-height: 1.5;
}
.money1,.money2,.money3{
  width: 100%;
  padding-left:30rpx;
}
.money2{
  padding-top: 10rpx ;
  padding-bottom: 10rpx ;
  border-bottom: 1rpx solid #ff683e;
}
.money3{
  margin-top: 10rpx;
}
.edit{
  float:right;
  display: inline-block;
  padding: 5rpx 10rpx;
  color: #FF683E;
  border: 1rpx solid #ff683e;
  border-radius: 10rpx;
}

.kaidanBody .atvice{
 background-color: #ffe1d9;
}
.kaidanBody .atvice .fsc{
 border: 1rpx solid #ff8665;
 color: #ff683e;
}


.keyboard{
  width:100%;
  height: auto;
  padding: 20rpx 0;
}
.keyboard image{
  width:132rpx;
  height: 120rpx;
  float: left;
  margin-left:10rpx;
  margin-bottom: 10rpx; 
}
/*弹出层*/
.model{
  overflow: hidden;
  z-index: 999;
}
.model-body{
  width:90%;
  height: auto;
  position: absolute;
  left: 5%;
  top: 10rpx;
}

/*支付类型按钮*/
.playType view{
  padding: 8rpx 10rpx;
  color: #B3B3B3;
  border: 1rpx solid #B3B3B3;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
}
.playType view.atvice{
  color: #FF683E;
  border: 1rpx solid #ff683e;
  background-color: #ffe1d9;
}

/*搜索弹出层*/
.SearchModel .model-body{
   height: 98%;
   overflow: hidden;
}
.SearchModel .list{
  height: 90%;
  overflow-y: scroll;
}