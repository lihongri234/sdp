<!--pages/login/index.wxml-->
<view class='container'>
    <view class='logo_box'>
        <image src='../../img/logo.png' class='img-1 center'></image>
    </view>
    <view class='input_box center'>
        <view class='bb mb60'>
            <input type='number' placeholder='手机号' class='fs24 lh2 fc-3'></input>
        </view>
        <view class='bb fac'>
            <input type='number' placeholder='手机验证码' class='f-2 fs24 fc-3 lh2'></input>
            <view bindtap='getnumber' class='fs24 fc-6'>获取验证码</view>
        </view>
        <button bindtap='login'>登录</button>
    </view>
</view>