/* pages/kaidan/index.wxss */
.container{
  overflow: hidden;
}
.bc-100{ background-color: #fff9e3;}
/*底部*/
.btn-next{
    background-color: #FF8665;
    color:#fff;
    width: 100%;
    height:100rpx;
    line-height:100rpx;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    position: absolute;
    right: 0;
    bottom: 0;
}


/*商品列表*/
.searchFor{
  padding: 20rpx;
  background-color: #EFEFF4;
}
.searchFor .img-1 {
    width: 28rpx;
    height: 28rpx;
}
.goodslist{
  background-color: #fff;
  height: 1000rpx;
  overflow-y:scroll; 
}
.goodsitem{
  padding: 10rpx 0;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #ffe1d9;
}
.goodsitem .name{
  font-size: 28rpx;
}
.goodsitem .desc{
  font-size: 22rpx;
  color: #898989;
}
.goodsitem .money{
  font-size: 22rpx;
  color: #898989;
}
.goodslist .atvice1{
  background-color: #ffe1d9;
}
.goodslist .atvice2 .name,.goodslist .atvice2 .desc,.goodslist .atvice2 .money{
  color: #FF683E;
}

/*总金额*/
.kaidanBody{
  height: 1000rpx;
}
.kaidanBody .sumMoney{
  width:100%;
  color:  #898989; 
  line-height: 1.5;
  text-align: center;
  margin: 110rpx 0;
}


.kaidanBody .atvice{
 background-color: #ffe1d9;
}
.kaidanBody .atvice .fsc{
 border: 1rpx solid #ff8665;
 color: #ff683e;
}

/*数字键盘*/
.keyboard{
  width:100%;
  height: auto;
  padding: 20rpx 0;
}
.keyboard image{
  width:132rpx;
  height: 120rpx;
  float: left;
  margin-left:10rpx;
  margin-bottom: 10rpx; 
}

/*弹出层*/
.model{
  overflow: hidden;
  z-index: 999;
}
.model-body{
  width:90%;
  height: auto;
  position: absolute;
  left: 5%;
  top: 10rpx;
}

/*搜索弹出层*/
.SearchModel .model-body{
   height: 98%;
   overflow: hidden;
}
.SearchModel .list{
  height: 90%;
  overflow-y: scroll;
}


/*确认入库*/
.confirmStorage{
  width:100%;
  height: auto;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.confirmStorage .list{
  width:100%;
  height: 800rpx;
  overflow-y: scroll; 
}

.confirmStorage .list .item .name{
  font-size: 28rpx;
}
.confirmStorage .list .item .desc{
  font-size: 22rpx;
  color: #898989;
}
.confirmStorage .list .item .money{
  font-size: 22rpx;
  color: #898989;
}
.confirmStorage .btn{
  width:50%;
  height: 100rpx;
  line-height: 100rpx;
  color:#fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}
.confirmStorage .btn-cancel{
background-color: #313131;
}
.confirmStorage .btn-confirm{
background-color: #FF683E;
}
