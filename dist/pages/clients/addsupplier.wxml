<!--pages/clients/addsupplier.wxml-->
<view class='container pt20'>
    <form bindsubmit='saveHandler'>
        <view class='lh25 bb pl30 fsc bc-1 pt10 pb10'>
            <view class='pl20 fc-1 fs28 f-1'>供应商
                <text class='fc-6 fs28'>*</text>
            </view>
            <view class='f-3'>
                <input type='text' placeholder='供应商名称' name="suppliername" maxlength='10' class='fs28 fc-2' value='{{suppliername}}'></input>
            </view>
        </view>
        <view class='lh25 bb pl30 fsc bc-1 pt10 pb10'>
            <view class='pl20 fc-1 fs28 f-1'>联系人</view>
            <view class='f-3'>
                <input type='text' placeholder='联系人姓名' name="name" maxlength='20' class='fs28 fc-2' value='{{name}}'></input>
            </view>
        </view>
        <view class='lh25 bb pl30 fsc bc-1 pt10 pb10'>
            <view class='pl20 fc-1 fs28 f-1'>联系电话</view>
            <view class='f-3'>
                <input type='number' placeholder='手机或固话' name="phone" maxlength='13' class='fs28 fc-2' value='{{phone}}'></input>
            </view>
        </view>
        <button class='btn-orange mt30' formType='submit'>保存资料</button>
    </form>
</view>