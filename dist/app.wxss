/*遮罩层  */

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    right: 0;
    top: 0;
    left: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
}

/*固定定位  */

.pf {
    position: fixed;
}

/*相对定位  */

.pr {
    position: relative;
}

/*绝对定位 左上  */

.palt {
    position: absolute;
    left: 0;
    top: 0;
}

/*绝对定位 右上  */

.part {
    position: absolute;
