/**app.wxss**/

page {
    font-size: 32rpx;
    background-color: #efeff4;
}

.container {
    width: 100%;
    height: auto;
}

view, navigator, input, textarea {
    box-sizing: border-box;
    display: block;
    padding: 0;
    margin: 0;
}

/*flex布局 两边对齐 子元素垂直居中  */

.fbc {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/*flex布局 居中对齐 子元素垂直居中   */

.fac {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

/*flex布局 从左到右排序 子元素垂直居中   */

.fsc {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

/*flex布局 居中对齐 子元素溢出换行 */

.faw {
    width: 100%;
    display: flex;
    justify-content: space-around;
    flex-wrap: flex-wrap;
}

/*flex布局 两边对齐 子元素溢出换行 */

.fbw {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

/*flex布局 从左到右排序 子元素溢出换行 */

.fsw {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

/*flex布局 占用的比例  */

.f-1 {
    flex: 1;
}

.f-2 {
    flex: 2;
}

.f-3 {
    flex: 3;
}

